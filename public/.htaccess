<IfModule mod_rewrite.c>
    RewriteEngine On

    # Se o arquivo ou diretório existir, serve direto
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Caso contrário, redireciona tudo para index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Segurança básica: não permitir acesso direto a certos arquivos
<FilesMatch "\.(htaccess|htpasswd|ini|phps|fla|psd|log|sh|sql)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
